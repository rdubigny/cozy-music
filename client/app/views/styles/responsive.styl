@media (max-width: 350px)
    #content
        #tracks-display
            table
                .artist,
                .album
                    width: 0%
                .num
                    width: 0%

@media (min-width: 350px)
    #content
        #tracks-display
            table
                .artist,
                .album
                    width: 20%
                .num
                    width: 30px

@media (max-height: 300px)
    #playlist-title-list,
    #playlist-list
        visibility: hidden

@media (max-width: 465px)
    #content
        .player
            .progress-info
                display: none

@media (max-width: 650px)
    #content
        .player
            .progress-side
                display: none


@media (max-width: 480px)
    // Landscape phones and down; why not using "orientation: portrait" ?orientation: landscape

    body
        //padding 0 20px
        text-rendering optimizeSpeed

    .layout-container
        width auto

@media (max-width: 767px)
    // Landscape phone to portrait tablet

    body
        //padding 0 20px
        text-rendering optimizeSpeed

    .layout-container
        width auto

@media (min-width: 768px) and (max-width: 979px)
    // Portrait tablet to landscape and desktop

    .layout-container
        width 724px

@media (min-width: 1200px)
    // Large desktop

    .layout-container
        width 1170px
